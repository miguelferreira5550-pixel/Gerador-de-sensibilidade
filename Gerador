<script>
function gerar(){
  let nivel=document.getElementById("nivel").value;
  let botao=parseInt(document.getElementById("botao").value)||50;
  let dpi=document.getElementById("dpi").value;

  let geral, red, scope, awm;

  if(nivel=="alta"){
    geral=200;red=195;scope=185;awm=170;
  }else if(nivel=="media"){
    geral=180;red=175;scope=165;awm=150;
  }else{
    geral=160;red=155;scope=145;awm=130;
  }

  let ajuste=(botao-50)/2;
  geral+=ajuste;
  red+=ajuste;

  if(dpi=="sim"){
    geral-=12;
    red-=12;
    scope-=12;
  }

  document.getElementById("resultado").innerHTML=
  `<b>üéØ Sensibilidade Ideal</b><br><br>
  üëä Geral: ${Math.round(geral)}<br>
  üî¥ Mira Vermelha: ${Math.round(red)}<br>
  üéØ Mira 2x / 4x: ${Math.round(scope)}<br>
  üéØ Sniper / AWM: ${Math.round(awm)}<br><br>
  ‚úîÔ∏è Perfeita pra todos os modos!`;
}
</script>

